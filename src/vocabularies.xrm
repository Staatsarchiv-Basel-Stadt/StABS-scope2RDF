		agentOrActivityIsTargetOfProvenanceRelation
		conditionsOfAccess
		conditionsOfUse
		descriptiveNote
		describesOrDescribed
		hasActivityType
		hasOrHadIdentifier
		hasOrHadMainSubject
		hasIdentifierType
		hasProvenance
		textualValue
		isAssociatedWithDate
		date
		hasDocumentaryFormType
		hasExtent
		hasInstantiation
		hasOrHadHolder
		isCorporateBodyTypeOf
		isOrWasConstituentOf
		isOrWasIncludedIn
		hasAgentName
		hasOrHadSubject
		hasRecordSetType
		history
		identifier
		measure
		name
		physicalCharacteristics
		physicalOrLogicalExtent
		productionTechnique
		scopeAndContent
		title
		^type
