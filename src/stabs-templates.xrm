/* Base URI templates for RiC-O
 * ============================
 * Subject URIS grundsätzlich gebildet anhand der sieben second level 
 * entities von RiC O/CM 
 * (@todo: klären, ob alle Entities verwendet werden sollen)
 * idURI ist eine Möglichkeit zur radikalen Vereinfachung (@todo, prüfen)
 */

/* Subject URI basierend nur auf ID, aktuell nicht in Gebrauch */
template idURI "http://ld.staatsarchiv.bs.ch/id/{0}"

/* Subject URIs für Record Resources (Verzeichnungseinheiten) */
template rrURI "http://ld.staatsarchiv.bs.ch/record/id/{0}"
template identURI  "http://ld.staatsarchiv.bs.ch/record/id/{0}/identity"
template dateURI "http://ld.staatsarchiv.bs.ch/record/id/{0}/daterange"

template instURI "http://ld.staatsarchiv.bs.ch/Instantiation/{0}"
template agURI "http://ld.staatsarchiv.bs.ch/Agent/{0}"
template evURI "http://ld.staatsarchiv.bs.ch/Event/{0}"
template ruURI "http://ld.staatsarchiv.bs.ch/Rule/{0}"
template plURI "http://ld.staatsarchiv.bs.ch/Place/{0}"
template daURI "http://ld.staatsarchiv.bs.ch/Date/{0}"