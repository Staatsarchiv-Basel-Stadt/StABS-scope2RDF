/* Base URI templates for RiC-O
 * ============================
 * Subject URIS grundsätzlich gebildet anhand der sieben second level 
 * entities von RiC-CM (RiC-O umfasst aber 12 second level!) 
 * (@todo: klären, ob alle Entities verwendet werden sollen)
 * thURI ist eine Möglichkeit zur radikalen Vereinfachung (@todo, prüfen)
 */

/* Thing URI basierend nur auf ID, Fallback für nicht näher definierte Instanzen (aktuell "Deskriptoren" */
template thURI "http://ld.staatsarchiv.bs.ch/Thing/{0}" // oder ohne '/Thing/'

/* Subject URIs für Record Resources (Verzeichnungseinheiten) */
template rrURI "http://ld.staatsarchiv.bs.ch/Record/{0}"
template refcodeURI "http://ld.staatsarchiv.bs.ch/Record/{0}"
template dateURI "http://ld.staatsarchiv.bs.ch/Record/{0}/daterange"

template instURI "http://ld.staatsarchiv.bs.ch/Instantiation/{0}-i"
template agURI "http://ld.staatsarchiv.bs.ch/Agent/{0}"
template evURI "http://ld.staatsarchiv.bs.ch/Event/{0}"

/* Extent URI Templates */
template exURI "http://ld.staatsarchiv.bs.ch/Extent/{0}"
template exlmURI "http://ld.staatsarchiv.bs.ch/Record/{0}/Extent/{1}-linear-meters"
template exnumURI "http://ld.staatsarchiv.bs.ch/Record/{0}/Extent/{1}-number-of-units"
template exnumfileURI "http://ld.staatsarchiv.bs.ch/Record/{0}/Extent/{1}-number-of-files"
template exapproxURI "http://ld.staatsarchiv.bs.ch/Record/{0}/Extent/extent-approximative"
template exdvURI "http://ld.staatsarchiv.bs.ch/Record/{0}/Extent/{1}-volume-of-data"

template ruURI "http://ld.staatsarchiv.bs.ch/Rule/{0}"
template plURI "http://ld.staatsarchiv.bs.ch/Place/{0}"
template daURI "http://ld.staatsarchiv.bs.ch/Date/{0}"

/* Templates for blank nodes */

template _ident "_ident{0}"

/* 12 Subklassen von rico:Thing
 * ----------------------------
 * rico:Agent
 * rico:Concept
 * rico:Coordinates
 * rico:Date
 * rico:Event
 * rico:Extent
 * rico:Instantiation
 * rico:PhysicalLocation
 * rico:Place
 * rico:RecordResource
 * rico:Relation
 * rico:Rule 
 */
 
template queryURL "https://query.staatsarchiv.bs.ch/query/detail.aspx?ID={0}"

/* Templates für Types
 * -------------------
 */

template thtypeURI "http://ld.staatsarchiv.bs.ch/vocabularies/thesaurusType#{0}"
template rstypeURI "http://ld.staatsarchiv.bs.ch/vocabularies/recordSetTypes#{0}"

